<%- unless @paste.errors.empty? -%>
  <tr>
    <td><%= error_messages_for :paste %></td>
  </tr>
<%- end -%>
<tr>
  <td>
    <% form_for(@paste) do |f| %>
      <p>
        <%= f.label :language %><br/>
        <%= f.select :language, SYNTAXES, :include_blank => true %>
      </p>
      <p>
        <%= f.label :code %><br/>
        <%= f.text_area :code, :cols => 80, :rows => 25 %>
      </p>
      <p>
        <%= f.submit "Create" %>
      </p>
    <% end %>
  </td>
</tr>
